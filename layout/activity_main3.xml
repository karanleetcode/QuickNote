<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".trash.Main3Activity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
            <TextView
                android:layout_width="109dp"
                android:layout_height="30dp"
                android:text="Empty Trash"
                android:id="@+id/emptytrashbutton"
                android:textSize="16dp"
                android:padding="4dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_marginTop="18dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="40dp"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="22dp"
                android:layout_marginBottom="15dp"
                android:hint="Search lost notes"
                android:fontFamily="Tahoma"
                android:paddingLeft="8dp"
                android:id="@+id/mainedit"
                android:background="@drawable/roundshape"
                android:textColor="#fff"

                android:backgroundTint="#3A5FCD	"/>

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trash is empty"
        android:textColor="#000"
        android:id="@+id/emptytrash"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/trashlistview"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="62dp"

        android:dividerHeight="10.0sp"
        android:divider="@android:color/transparent"
        >
    </ListView>
</android.support.constraint.ConstraintLayout>